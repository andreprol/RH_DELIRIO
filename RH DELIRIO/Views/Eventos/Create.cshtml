@model RH_DELIRIO.Models.Eventos

@{
    ViewData["Title"] = "Adicionar Eventos";
}

<h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label"></label>
                <select asp-for="FuncionarioId" class ="form-control" asp-items="ViewBag.FuncionarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="numero_evento" class="control-label"></label>
                <input asp-for="numero_evento" class="form-control" />
                <span asp-validation-for="numero_evento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricao_evento" class="control-label"></label>
                <input asp-for="descricao_evento" class="form-control" />
                <span asp-validation-for="descricao_evento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="data_evento" class="control-label"></label>
                <input asp-for="data_evento" class="form-control" />
                <span asp-validation-for="data_evento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Retornar</a>
</div>

