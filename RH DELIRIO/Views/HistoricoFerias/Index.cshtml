@model IEnumerable<RH_DELIRIO.Models.HistoricoFerias>

@{
    ViewData["Title"] = "Histórico Férias";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Adicionar Histórico</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.datainicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datafim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datagozo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorferias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.abonoferias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.diasgozo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.diasvendidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorvendido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.funcionario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.datainicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datafim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datagozo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorferias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.abonoferias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diasgozo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diasvendidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorvendido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.funcionario.Nome)
            </td>
            <td class="text-right">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
