@model ErrorViewModel
@{
    if (Model == null)
    {
        ViewData["Title"] = Model == null? "Ocorreu um erro!" : Model.Titulo;
    }
    
}


@{ 
    if (Model == null)
    { 
    <div>
        <h2> Ops! Ocorreu um erro, mas não se preocupe. Por favor informe à equipe de TI para que possamos corrigir</h2>

    </div>
    }
    else
    {

        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}